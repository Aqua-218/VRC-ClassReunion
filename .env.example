# ==========================================
# Discord 必須設定
# ==========================================
# Discord Bot トークン（Discord Developer Portalから取得）
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID
DISCORD_CLIENT_ID=your_client_id_here

# 対象DiscordサーバーのID
GUILD_ID=your_guild_id_here

# お誘い募集フォーラムのチャンネルID
INVITATION_FORUM_ID=your_forum_channel_id_here

# 募集作成ボタンを配置するチャンネルID
INVITATION_CREATE_CHANNEL_ID=your_create_channel_id_here

# スタッフ用インスタンス管理チャンネルID
STAFF_CHANNEL_ID=your_staff_channel_id_here

# チケットチャンネルのカテゴリID
TICKET_CATEGORY_ID=your_ticket_category_id_here

# チケット作成ボタンを配置するチャンネルID
TICKET_CREATE_CHANNEL_ID=your_ticket_create_channel_id_here

# スタッフロールのID
STAFF_ROLE_ID=your_staff_role_id_here

# ==========================================
# データベース
# ==========================================
# PostgreSQL接続URL（本番環境）
# DATABASE_URL=postgresql://username:password@localhost:5432/vrc_reunion_bot

# SQLite接続URL（開発環境）
DATABASE_URL=file:./dev.db

# ==========================================
# 機能制御（true/false）
# ==========================================
# 自動クローズ機能を有効化
ENABLE_AUTO_CLOSE=true

# リマインダー通知を有効化
ENABLE_REMINDER=true

# 参加者へのDM通知を有効化
ENABLE_PARTICIPANT_DM=true

# 募集編集時の参加者通知を有効化
ENABLE_EDIT_NOTIFICATION=false

# 募集キャンセル時のDM通知を有効化
ENABLE_CANCEL_DM=true

# ==========================================
# タイミング設定
# ==========================================
# 自動クローズ実行間隔（cron形式: 毎時0分）
AUTO_CLOSE_CRON=0 * * * *

# リマインダー送信時刻（開始何分前）
REMINDER_MINUTES_BEFORE=60

# リマインダーチェック間隔（cron形式: 5分ごと）
REMINDER_CHECK_CRON=*/5 * * * *

# ==========================================
# レート制限
# ==========================================
# 募集作成のクールダウン（秒）
INVITATION_CREATION_COOLDOWN=300

# ボタンクリックのクールダウン（秒）
BUTTON_CLICK_COOLDOWN=1

# 1ユーザーあたりの1日の募集作成上限
MAX_INVITATIONS_PER_USER_PER_DAY=5

# ==========================================
# ログ設定
# ==========================================
# ログレベル（debug/info/warn/error）
LOG_LEVEL=info

# ログ出力形式（simple/json）
LOG_FORMAT=json

# ログファイル保存先
LOG_FILE_PATH=./logs/app.log

# コンソールログ出力を有効化
ENABLE_CONSOLE_LOG=true

# ファイルログ出力を有効化
ENABLE_FILE_LOG=true

# ==========================================
# Discord詳細設定（オプション）
# ==========================================
# Discord Gateway Intents（カンマ区切り）
# DISCORD_INTENTS=guilds,guildMessages,messageContent,guildMembers

# キャッシュ戦略（full/limited/minimal）
# DISCORD_CACHE_STRATEGY=limited

# REST API タイムアウト（ms）
# DISCORD_REST_TIMEOUT=15000

# Gateway タイムアウト（ms）
# DISCORD_GATEWAY_TIMEOUT=30000

# ==========================================
# フォーラムタグ設定（オプション）
# ==========================================
# FORUM_TAG_TOURISM=観光
# FORUM_TAG_GAME=ゲーム
# FORUM_TAG_RELAX=まったり
# FORUM_TAG_PHOTO=撮影会
# FORUM_TAG_EVENT=イベント
# FORUM_TAG_OTHER=その他

# ==========================================
# バリデーション設定（オプション）
# ==========================================
# MIN_PARTICIPANTS=2
# MAX_PARTICIPANTS=80
# MIN_EVENT_NAME_LENGTH=1
# MAX_EVENT_NAME_LENGTH=200
# MAX_DESCRIPTION_LENGTH=2000
# MIN_EVENT_DURATION_MINUTES=30
# MAX_EVENT_DURATION_HOURS=24

# ==========================================
# パフォーマンス設定（オプション）
# ==========================================
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10
# DATABASE_TIMEOUT=10000

# ==========================================
# 開発・デバッグ（オプション）
# ==========================================
# NODE_ENV=development
# DEBUG_MODE=false
# ENABLE_STACK_TRACE=true
